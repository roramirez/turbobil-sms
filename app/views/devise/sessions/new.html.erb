<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= I18n.t('views.pages.please_sing_in') %></h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.input_field :email, required: true, autofocus: true, :pattern => ".*", placeholder: I18n.t('views.pages.email'), class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.input_field :password, required: true, placeholder: I18n.t('views.pages.password'), class: 'form-control' %>
              </div>
              <div class="checkbox">
                <label>
                  <%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  <%= f.label :remember_me, class: 'remember-me' %>
                </label>
              </div>
              <%= f.button :submit, I18n.t('views.pages.sign_in'), class: 'btn btn-lg btn-success btn-block' %>
            </fieldset>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

