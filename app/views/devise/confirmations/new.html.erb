<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3><%= I18n.t('views.pages.resend_confirmation_instruccion') %></h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>
            <fieldset>
              <div class="form-group">
                <%= f.input_field :email, required: true, :pattern => ".*", placeholder: 'E-mail', class: 'form-control' %>
              </div>
              <%= f.button :submit, I18n.t('views.pages.resend_confirmation_instruccion'), class: 'btn btn-lg btn-create btn-block' %>
            </fieldset>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
