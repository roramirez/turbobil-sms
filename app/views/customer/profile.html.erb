 <div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Edit Profile</h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for(@user, url: customer_update_profile_path, :method => 'post') do |f| %>

              <div class="form-group">
                <label>Name</label>
                <%= f.text_field :name, autofocus: true, class: 'form-control', as: 'string' %>
              </div>

              <div class="form-group">
                <label>Email</label>
                <%= f.email_field :email, autofocus: true, class: 'form-control', as: 'string' %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.error :password %>
                <%= f.password_field :password, autofocus: true, class: 'form-control', as: 'password',  placeholder: "Enter new password if you change" %>
              </div>

              <%= f.submit "Update", class: 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
