 <div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= I18n.t('views.pages.edit_profile') %></h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for(@user, url: customer_update_profile_path, :method => 'post') do |f| %>

              <div class="form-group">
                <label><%= I18n.t('views.pages.name') %></label>
                <%= f.text_field :name, autofocus: true, class: 'form-control', as: 'string' %>
              </div>

              <div class="form-group">
                <label><%= I18n.t('views.pages.email') %></label>
                <%= f.email_field :email, autofocus: true, class: 'form-control', as: 'string' %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.error :password %>
                <%= f.password_field :password, autofocus: true, class: 'form-control', as: 'password',  placeholder: I18n.t('views.pages.enter_new_password') %>
              </div>

              <div class="form-group">
                <%= f.label :language %>
                <%= f.input_field :language,
                        :collection => [['English', 'en'],['EspaÃ±ol', 'es']],
                        :class => 'form-control',
                        :required => true,
                        :as => 'select' %>
              </div>

              <%= f.submit I18n.t('views.buttons.update'), class: 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
