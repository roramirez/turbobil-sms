<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Edit Account <%= @account.code %></h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= simple_form_for(@account, url: customer_account_path, :method => 'post') do |f| %>

              <%= f.input_field :id, as: 'hidden', name: 'id' %>
              <div class="form-group">
                <label>IP Auth</label>
                <%= f.input_field :ip_auth, autofocus: true, class: 'form-control', as: 'string' %>
              </div>

              <div class="form-group">
                <label>Password</label>
                <%= f.input_field :password, autofocus: true, class: 'form-control', as: 'string' %>
              </div>

              <div class="form-group">
                <%= f.association :codecs, as: :check_boxes %>
              </div>

              <%= f.button :submit, "Update", class: 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
