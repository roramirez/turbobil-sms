<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Accounts</h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTable">
          <thead>
            <tr>
              <th>Code</th>
              <th>IP Auth</th>
              <th>Password</th>
              <th>Codecs</th>
            </tr>
          </thead>
          <tbody>
            <% @accounts.each do |account| %>
            <tr class="odd gradeX">
              <td><%= account.code %></td>
              <td><%= account.ip_auth %></td>
              <td><%= account.password %></td>
              <td>
                <% account.codecs.each do |codec| %>
                  <%= codec.name %>
                <% end %>
              </td>
            </tr>
            <% end %>
           </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= paginate @accounts, theme:"turbobil" %>
   </div>
</div>
