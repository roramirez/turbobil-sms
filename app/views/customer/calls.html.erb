<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Calls</h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <form  class="form-inline form-horizontal" role="form">
              <label for="call_start" class="control-label input-sm">From</label>
              <input class="datetimepicker form-control input-sm" id="call_start" name="call_start" type="datetime" value="<%= params[:call_start] %>"/>
              <label for="call_end" class="control-label input-sm">To</label>
              <input class="datetimepicker form-control input-sm" id="call_end" name="call_end" type="datetime" value="<%= params[:call_end] %>"/>
              <button class="btn btn-primary btn-sm" type="submit">Filter</button>
          </form>
       </div>
     </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTable" id="dataTable">
          <thead>
            <tr role="row">
              <th><%=  link_to_sorted "At", :at %></th>
              <th><%=  link_to_sorted "Route", :route_id %></th>
              <th><%=  link_to_sorted "Destination", :destination %></th>
              <th><%=  link_to_sorted "Duration", :duration %></th>
              <th><%=  link_to_sorted "Cost", :price_for_customer %></th>
              <th><%=  link_to_sorted "IP", :ip %></th>
            </tr>
          </thead>
          <tbody>
            <% @calls.each do |call| %>
            <tr class="odd gradeX">
              <td><%= localize(call.at, :format => :long) if call.at.present? %></td>
              <td><%= call.route %></td>
              <td><%= call.destination %></td>
              <td><%= call.duration_hhmmss %></td>
              <td><%= call.price_for_customer %></td>
              <td><%= call.ip %></td>
            </tr>
            <% end %>
           </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= paginate @calls, theme:"turbobil" %>
   </div>
</div>
<script>
  jQuery('.datetimepicker').datetimepicker();
</script>

