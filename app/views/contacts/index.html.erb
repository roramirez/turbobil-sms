<div class="row">
  <div class="col-lg-12">
     <h1 class="page-header">
       Contact list <%= @list.name %>
       <div class="pull-right">
        <%= link_to 'New List', new_list_path, class: 'btn btn-default' %>
        <%= link_to 'Import Contacts',  import_list_path(@list), class: 'btn btn-default' %>
        </div>
     </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">

    <div class="panel panel-default">

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTable">
          <thead>

            <tr role="row">
              <th><%=  link_to_sorted "Number", :number %></th>
            </tr>
          </thead>

          <tbody>
            <% @contacts.each do |contact| %>
            <tr class="odd gradeX">
              <td><%= contact.number %></td>
            </tr>
            <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= paginate @contacts, theme:"turbobil" %>
   </div>
</div>
<br>
