
<div class="row">
  <div class="col-lg-12">
     <h1 class="page-header">
       Campaigns
       <div class="pull-right">
        <%= link_to 'New Campaign', new_campaign_path, class: 'btn btn-default' %>
        </div>
     </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">

    <div class="panel panel-default">

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTable">
          <thead>

            <tr role="row">
              <th><%=  link_to_sorted "Name", :name %></th>
              <th><%=  link_to_sorted "Status", :status %></th>
              <th><%=  link_to_sorted "Init", :init %></th>
              <th><%=  link_to_sorted "List", :list_id %></th>
              <th><%=  "Operation"  %></th>
            </tr>
          </thead>

          <tbody id="campaigns">
            <% @campaigns.each do |campaign| %>
            <tr data-id="<%= campaign.id %>" class="odd gradeX">
              <td><%= campaign.name %></td>
              <td>
              <span id="status-<%= campaign.id %>"><%= campaign.status_text %></span>
                <div class="progress progress-info">
                  <div class="progress-bar progress-id-<%= campaign.id %>" style="width: <%= campaign.percent %>%;"><%= campaign.percent%>%</div>
                </div>
              </td>
              <td><%= campaign.init %></td>
              <td><%= campaign.list %></td>
              <td>
                <%= link_to 'Edit', edit_campaign_path(campaign) %>
                <%= link_to "Show outgoing SMSs", outgoings_path(:campaign => campaign.id) %>


              </td>
            </tr>
            <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= paginate @campaigns, theme:"turbobil" %>
   </div>
</div>
<br>

<script>

  var requestCampaign = true;
  var ids =  [];
  var trs = $(".table").find("tbody>tr");
  $.each(trs, function( key, value ) {
    var id = $(value).data('id');
    ids.push(id);
  });

  setInterval(function () {
    if (requestCampaign == true) {
      getCampaignsInfo(ids);
    }
  }, 10000);


  function getCampaignsInfo(ids) {
    requestCampaign = false;
    var req = jQuery.ajax({
      type: 'GET',
      url: '<%= campaigns_path %>.json',
      data: {ids: ids}
    });

    req.done(function (response) {
      if (response) {
        $.each(response, function(key, value){
          $('#status-' + value.id).html(value.status_text);
          $('.progress-id-12').css('width', value.percent + '%');
          $('.progress-id-12').html(value.percent + '%');
        });
      }
    });

    req.fail(function (response) {
      console.log(response);
    });

    req.always(function () {
      requestCampaign = true;
    });
  }

</script>
